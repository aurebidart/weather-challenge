generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x","linux-glibc-libssl1.1"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model WeatherHistory {
  id         Int      @id @default(autoincrement())
  city       String
  country    String?
  searchedAt DateTime @default(now())
  data       Json
}
model FavoriteCity {
  id        Int      @id @default(autoincrement())
  city      String
  country   String?
  addedAt   DateTime @default(now())
}
